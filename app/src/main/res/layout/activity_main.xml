<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0A0A0A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con logo LG ThinQ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LG ThinQ"
                android:textSize="28sp"
                android:textColor="#A50034"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Remote"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>

        <!-- Connection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“º ConexiÃ³n"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â— Desconectado"
                    android:textColor="#FF6B6B"
                    android:textSize="15sp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/tvIpInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="IP del TV (ej: 192.168.1.100)"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666666"
                    android:background="@android:color/transparent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="12dp"
                    style="@android:style/Widget.Material.EditText"/>

                <Button
                    android:id="@+id/autoDiscoverButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ” Buscar TV automÃ¡ticamente"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="#A50034"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"
                    app:cornerRadius="12dp"/>

                <Button
                    android:id="@+id/connectButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Conectar"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="#00A3E0"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Remote Controls -->
        <LinearLayout
            android:id="@+id/controlsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Power & Navigation Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#8B0000"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    
                    <Button
                        android:id="@+id/btnPower"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="â»"
                        android:textSize="28sp"
                        android:textColor="#FFFFFF"
                        android:background="?android:attr/selectableItemBackground"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#2A2A2A"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">
                    
                    <Button
                        android:id="@+id/btnHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ðŸ \nHome"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="?android:attr/selectableItemBackground"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Volume & Channel Controls -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:weightSum="2">

                    <!-- Volume Control -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VOL"
                            android:textColor="#888888"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical"
                            android:background="#2A2A2A"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnVolUp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_add"
                                android:background="?android:attr/selectableItemBackground"
                                app:tint="#FFFFFF"
                                android:scaleType="fitCenter"
                                android:contentDescription="Volume Up"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="â”â”â”"
                                android:textColor="#666666"
                                android:gravity="center"
                                android:textSize="10sp"/>

                            <ImageButton
                                android:id="@+id/btnVolDown"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_remove"
                                android:background="?android:attr/selectableItemBackground"
                                app:tint="#FFFFFF"
                                android:scaleType="fitCenter"
                                android:contentDescription="Volume Down"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Channel Control -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CH"
                            android:textColor="#888888"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical"
                            android:background="#2A2A2A"
                            android:padding="8dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnChUp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_chevron_up"
                                android:background="?android:attr/selectableItemBackground"
                                app:tint="#FFFFFF"
                                android:scaleType="fitCenter"
                                android:contentDescription="Channel Up"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="â”â”â”"
                                android:textColor="#666666"
                                android:gravity="center"
                                android:textSize="10sp"/>

                            <ImageButton
                                android:id="@+id/btnChDown"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_chevron_down"
                                android:background="?android:attr/selectableItemBackground"
                                app:tint="#FFFFFF"
                                android:scaleType="fitCenter"
                                android:contentDescription="Channel Down"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mute Button -->
            <Button
                android:id="@+id/btnMute"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ”‡ MUTE"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3A3A3A"
                android:layout_marginBottom="12dp"
                app:cornerRadius="12dp"/>

            <!-- Apps Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¬ Apps RÃ¡pidas"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="1">

                        <Button
                            android:id="@+id/btnNetflix"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:text="Netflix"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#E50914"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="12dp"/>

                        <Button
                            android:id="@+id/btnYouTube"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:text="YouTube"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FF0000"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="12dp"/>

                        <Button
                            android:id="@+id/btnAmazon"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_columnWeight="1"
                            android:text="Prime"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#00A8E1"
                            app:cornerRadius="12dp"/>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LG ThinQ Remote v2.0 - RoRo Edition"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
